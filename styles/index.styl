html,
body 
    width: 100%
    height: 100%
    background-color: #fafafa
    

.container
    position: relative 
    
    height: 100%
    padding: 0
    
    background-color: #fff
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.4)
    
    header 
        position: relative
        
        width: 100%
        height: 15%

        background-color: #2D3945
        box-shadow: 0 1px 0 rgba(0, 0, 0, 0.2)
        
        #mephi-logo
            position: absolute
            top: 30%
            left: 50%
            transform: translateX(-50%) translateY(-50%)
            
            
        #title 
            position: absolute
            bottom: 10%
            left: 50%
            transform: translateX(-50%)
            
            color: #fff    
            
    #section-shedule
        position: relative
        
        padding: 0 5%
        
        width: 100%
        height: 75%
        
        .day-title 
            font-size: 20px
            
    #button-add 
        position: absolute
        right: 5%